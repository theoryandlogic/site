<h2>We'd love to hear from you.</h2>

<form id="contact_form" method="post" action="/contact">
	
	<h4>name<h4>
		<input id="contact_name" name="contact[name]" type="text" />

		<h4>email<h4>
		<input id="contact_email" name="contact[email]" type="text" />

		<h4>website (optional)<h4>
		<input type="text" name="contact[website]" id="contact_website" />
		<h4>message<h4>
		<textarea name="contact[message]" rows="8" cols="40"></textarea>
		<br />
		<input type="submit" name="commit" value="Submit" id="contact_submit" />
</form>
